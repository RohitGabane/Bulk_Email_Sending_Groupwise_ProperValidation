@model Bulk_Email_Sending_Groupwise.Models.Employee
@{
    ViewData["Title"] = "AddMenu";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="AddMenu" method="post">
                        <input type="hidden" asp-for="Emp_ID" />
                        <div class="form-group">
                            <label for="selectedMenuId">Select Menu:</label>
                            <select class="form-control" asp-for="SelectedMenuId"
                                    asp-items="@(ViewBag.Menus != null ? new SelectList(ViewBag.Menus, "MenuID", "MenuName") : Enumerable.Empty<SelectListItem>())">
                                <option value="">-- Select Menu --</option>
                            </select>
                        </div>
                        <br />
                        <div class="text-center">
                            <button type="submit" onclick="onsuccessclick()" class="btn btn-primary">Add Menu</button>
                            <a asp-action="Index" class="btn btn-success">Back To list</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function onsuccessclick() {
        alert("Add successfully");
    }
</script>